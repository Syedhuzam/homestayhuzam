<div class="form-group">
  <label for="checkIn">CheckIn</label>
  <input type="date" id="checkIn" name="checkIn" onchange="checkBookingClash(this)">
</div>
<div class="form-group">
  <label for="checkOut">CheckOut</label>
  <input type="date" id="checkOut" name="checkOut" onchange="checkBookingClash(this)">
</div>
<div id="availibility-info"></div>
<br>
<br>
<div id="amount"></div> 
<br>
<button class="submit-btn" onclick="postBooking()">Submit</button>
